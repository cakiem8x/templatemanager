extends ../layouts/backend

block content
    div.page-header
        h2
            a(href="/admin/user") Administrators

            span.pull-right
                a.btn.btn-link(href="/admin/user/add")
                    i.fa.fa-plus
                    | &nbsp;Add new administrator

    if total == 0
        p.text-center There is no administrator
    else
        div.row
            div.col-lg-8 Found #{total} administrators
            div.col-lg-4.pull-right
                form.form-inline(method="get", action="/admin/user")
                    div.input-group
                        input.form-control(type="text", name="q", value="#{q}")
                        span.input-group-btn
                            button.btn.btn-default(type="submit")
                                i.fa.fa-search

        table.table(style="margin-top: 20px;")
            thead
                tr
                    th Full name
                    th Username
                    th Email
                    th Role
                    th Actions
            tbody
                for user in users
                    tr
                        td #{user.full_name}
                        td #{user.username}
                        td #{user.email}
                        td #{user.role}
                        td
                            div.btn-group
                                a.btn.btn-default(href="/admin/user/edit/#{user._id}") Edit
                                if (user.username != currentUser)
                                    button.btn.btn-warning.lockButton(data-user="#{user._id}", data-locked="#{user.locked}")
                                        = user.locked ? 'Unlock' : 'Lock'

        // Pagination
        if (numPages > 1)
            div.text-center
                ul.pagination
                    li
                        a(href="#{url(req, { page: 1 })}") &larr;
                    - for (i = startRange; i <= endRange; i++)
                        li(class=(i == page) ? 'active' : '')
                            a(href="#{url(req, { page: i })}") #{i}
                    li
                        a(href="#{url(req, { page: numPages })}") &rarr;

block footerScript
    script(type="text/javascript").
        $(document).ready(function() {
            $('.lockButton').on('click', function() {
                var $that = $(this), locked = $that.attr('data-locked'), id = $that.attr('data-user');
                $that.attr('disabled', 'disabled');
                $.post('/admin/user/lock', {
                    id: id
                }).success(function(response) {
                    $that.removeAttr('disabled');
                    if (response.success) {
                        $that.html('true' == locked ? 'Lock' : 'Unlock').attr('data-locked', 'true' == locked ? 'false' : 'true');
                    }
                });
            });
        });