html(ng-app="TemplateDemo")
    head
        meta(charset="utf-8")
        meta(http-equiv="Content-type", content="text/html;charset=UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        title #{provider.name}
        //link(rel="stylesheet", href="/vendor/bootstrap/css/bootstrap.min.css")
        link(rel="stylesheet", href="/vendor/bootstrap-theme/css/flatly.css")
        link(rel="stylesheet", href="/vendor/font-awesome/css/font-awesome.min.css")
        link(rel="stylesheet", href="/asset/css/style.css")
        //if IE 7
            link(rel="stylesheet", href="/vendor/font-awesome/css/font-awesome-ie7.min.css")
        //if lt IE 9
            script(src="/vendor/html5shiv/html5shiv.min.js")
            script(src="/vendor/respond/respond.min.js")
    body.tpl-body(ng-controller="DemoController")
        div.navbar.navbar-default.navbar-fixed-top
            div.container
                div.navbar-header
                    button.navbar-toggle(type="button", data-toggle="collapse", data-target="#navbarCollapse")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="#{provider.url}", title="#{provider.name}")
                        if provider.logo
                            img(src="#{provider.logo}")
                        else
                            #{provider.name}

                div#navbarCollapse.nav-collapse
                    ul.nav.navbar-nav
                        li
                            a#templateButton(href="#", ng-click="activateTab('templates')")
                                i.fa.fa-heart
                                | &nbsp;Templates&nbsp;&nbsp;
                                span.badge {{ total }}
                        li
                            a#filterButton(href="#", ng-click="activateTab('filter')")
                                i.fa.fa-flask
                                | &nbsp;Filter
                        li
                            a(href="#{provider.registerUrl}")
                                i.fa.fa-shopping-cart
                                | &nbsp;Join us

                    ul.nav.navbar-nav.navbar-right
                        li(ng-show="currentTemplate", ng-class="{ 'dropdown': currentTemplate.themes.length > 0 }")
                            a(href="#", data-toggle="dropdown", ng-class="{ 'dropdown-toggle': currentTemplate.themes.length > 0 }") {{ currentTemplate.name }}&nbsp;
                                b.caret(ng-show="currentTemplate.themes.length")
                            ul(ng-show="currentTemplate.themes.length", ng-class="{ 'dropdown-menu': currentTemplate.themes.length > 0 }")
                                li(ng-repeat="theme in currentTemplate.themes", style="background: {{ theme.color }}")
                                    a(href="#", ng-click="showTemplate(currentTemplate, theme)") {{ theme.name }}

                        li(ng-class="{ 'disabled': !currentTemplate }")
                            a(href="#", ng-click="resizeTo(320, 480)")
                                i.fa.fa-mobile.fa-2x
                        li(ng-class="{ 'disabled': !currentTemplate }")
                            a(href="#", ng-click="resizeTo(480, 320)")
                                i.fa.fa-mobile.fa-2x.fa-rotate-90
                        li(ng-class="{ 'disabled': !currentTemplate }")
                            a(href="#", ng-click="resizeTo(768, 1024)")
                                i.fa.fa-tablet.fa-2x
                        li(ng-class="{ 'disabled': !currentTemplate }")
                            a(href="#", ng-click="resizeTo(1024, 768)")
                                i.fa.fa-tablet.fa-2x.fa-rotate-90
                        li(ng-class="{ 'disabled': !currentTemplate }")
                            a(href="#", ng-click="resizeTo(1440, 900)")
                                i.fa.fa-laptop.fa-2x
                        li(ng-class="{ 'disabled': !currentTemplate }")
                            a(href="#", ng-click="resizeTo()")
                                i.fa.fa-desktop.fa-2x

        // Templates
        div.tpl-tab.col-lg-6.col-lg-offset-3(ng-class="{ 'show': activeTab == 'templates', 'hide': activeTab == 'filter' || activeTab == null }")
            div.tpl-items
                p.text-center(ng-class="{ 'show': total == 0, 'hide': total > 0 }") Not found templates
                ul.tpl-item-list(ng-class="{ 'show': total > 0, 'hide': total == 0 }")
                    li.col-lg-4(ng-repeat="template in templates")
                        div.text-center(style="margin-bottom: 10px;")
                            div.hide(ng-class="{ 'show': template.themes == null || template.themes.length == 0 }")
                                a.btn.btn-default(href="#", ng-click="showTemplate(template)") {{ template.name }}

                            div.hide(ng-class="{ 'show': template.themes && template.themes.length > 0 }")
                                div.btn-group
                                    button.btn.btn-default.dropdown-toggle(type="button", data-toggle="dropdown")
                                        | {{ template.name }} &nbsp;
                                        span.caret
                                    ul.dropdown-menu.text-left
                                        li(ng-repeat="theme in template.themes", style="background: {{ theme.color }}")
                                            a(href="#", ng-click="showTemplate(template, theme)") {{ theme.name }}

                        p
                            img(ng-src="#{thumbPrefixUrl}{{ template.thumbs.medium }}")

                    li.clearfix

                div.clearfix

                // Pagination
                div.text-center(ng-show="pagination.numPages > 1")
                    ul.pagination
                        li
                            a(href="#", ng-click="goPage(1)", tpl-pagination) &larr;

                        li(ng-repeat="i in pagination.range", ng-class="{ 'active': i == 1 }")
                            a(href="#", ng-click="goPage(i)", tpl-pagination) {{ i }}
                        li
                            a(href="#", ng-click="goPage(pagination.numPages)", tpl-pagination) &rarr;

                div.clearfix

        // Filters
        div.tpl-tab.col-lg-6.col-lg-offset-3(ng-class="{ 'show': activeTab == 'filter', 'hide': activeTab == 'templates' || activeTab == null }")
            div.tpl-filter
                div.row
                    form.form-horizontal
                        div.form-group
                            label.col-lg-3.control-label Year
                            div.col-lg-9
                                div.btn-group
                                    button.btn.btn-default.active(type="button", value="", tpl-check-button="year") All
                                    for year in years
                                        button.btn.btn-default(type="button", value="#{year}", tpl-check-button="year") #{year}

                        if tags.length > 0
                            div.form-group
                                label.col-lg-3.control-label Tag
                                div.col-lg-9
                                    ul.list-unstyled.list-inline.tpl-tag-list
                                        li
                                            a.badge(href="#", tpl-tag="") All
                                        for tag in tags
                                            li
                                                a(href="#", tpl-tag="#{tag}") #{tag}

                        div.form-group
                            label.col-lg-3.control-label Responsive
                            div.col-lg-9
                                div.btn-group
                                    button.btn.btn-default.active(type="button", value="", tpl-check-button="responsive") All
                                    button.btn.btn-default(type="button", value="true", tpl-check-button="responsive") Yes
                                    button.btn.btn-default(type="button", value="false", tpl-check-button="responsive") No

                        div.form-group
                            label.col-lg-3.control-label High Resolution
                            div.col-lg-9
                                div.btn-group
                                    button.btn.btn-default.active(type="button", value="", tpl-check-button="high_resolution") All
                                    button.btn.btn-default(type="button", value="yes", tpl-check-button="high_resolution") Yes
                                    button.btn.btn-default(type="button", value="no", tpl-check-button="high_resolution") No

                        hr

                        div.form-group
                            div.col-lg-9.col-lg-offset-3
                                button.btn.btn-primary(type="button", style="margin-right: 20px;", ng-click="filter()") Filter

        // Frame showing template demo URL
        div.tpl-frame-container(ng-style="{ width: w, height: h, marginTop: t, marginLeft: l }")
            iframe(ng-src="{{ frameUrl }}")

        //if lt IE 9
            script(src="/vendor/jquery/jquery-1.10.2.min.js")
        //[if gte IE 9]><!
        script(src="/vendor/jquery/jquery-2.0.3.min.js")
        //<![endif]
        script(src="/vendor/bootstrap/js/bootstrap.min.js")
        script(src="/vendor/angularjs/angular.min.js")
        script(src="/asset/js/app.js")