!!! 5
html
    head
        meta(charset="utf-8")
        meta(http-equiv="Content-type", content="text/html;charset=UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        title #{title}

        link(rel="stylesheet", href="/vendor/bootstrap-theme/css/flatly.css")
        link(rel="stylesheet", href="/vendor/font-awesome/css/font-awesome.min.css")

        //if IE 7
            link(rel="stylesheet", href="/vendor/font-awesome/css/font-awesome-ie7.min.css")

        //if lt IE 9
            script(type="text/javascript", src="/vendor/html5shiv/html5shiv.min.js")
            script(type="text/javascript", src="/vendor/respond/respond.min.js")

        block head

        link(rel="stylesheet", href="/asset/css/backend.css")
    body
        .wrapper
            div.navbar.navbar-default.navbar-fixed-top
                div.container
                    div.navbar-header
                        button.navbar-toggle(type="button", data-toggle="collapse", data-target="#navbar-collapse")
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href="/admin") Dashboard

                    div#navbar-collapse.collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li
                                a(href="/admin/template") Templates
                            if ('root' == user.role)
                                li
                                    a(href="/admin/user") Administrators

                        ul.nav.navbar-nav.navbar-right
                            li.dropdown
                                a.dropdown-toggle(href="#", data-toggle="dropdown")
                                    | Hello #{user.username} &nbsp;
                                    b.caret
                                ul.dropdown-menu
                                    li
                                        a(href="/admin/password") Change password
                                    li
                                        a(href="/admin/signout") Sign out
            .container
                .main
                    block content
            .push

        footer
            .container
                | Copyright (c) 2013 &nbsp;
                a(href="#{provider.url}") #{provider.name}

        //if lt IE 9
            script(type="text/javascript", src="/vendor/jquery/jquery-1.10.2.min.js")

        //[if gte IE 9]><!
        script(type="text/javascript", src="/vendor/jquery/jquery-2.0.3.min.js")
        //<![endif]

        script(type="text/javascript", src="/vendor/bootstrap/js/bootstrap.min.js")
        script(type="text/javascript", src="/vendor/socket.io/socket.io.min.js")

        script(type="text/javascript").
            $(document).ready(function() {
                io.connect().emit('userName', '#{user.username}');
            });

        block footerScript